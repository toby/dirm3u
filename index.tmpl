<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1,width=device-width">
    <title>videos@{{.HostPort}}</title>
    <style type="text/css">
      .video-container {
        padding: 20px;
      }
    </style>    
  </head>
  <body>
    <a href="http://{{.HostPort}}/playlist.m3u">Playlist.m3u</a>
    {{range .Files}}
      <div class="video-container">
        <video width="400" controls="controls" preload="metadata">
          <source src="http://{{$.HostPort}}/media/{{.Path}}#t=0.5" type="video/{{.Type}}">
        </video>
      </div>
    {{end}}
  </body>
</html>
